@model Page<SimplePlaylist>
@{
    ViewData["Title"] = "Playlists";
}

<h1>Playlists</h1>
@foreach (var playlist in Model.Items)
{
    <a asp-controller="playlists" asp-action="item" asp-route-id="@playlist.Id">@playlist.Name</a>
    <hr />
}
<ul class="pagination">
    <li class="page-item"><a class="page-link" href="#">Previous</a></li>
    <li class="page-item"><a class="page-link" href="#">Next</a></li>
</ul>